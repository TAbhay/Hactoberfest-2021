#include<iostream>
using namespace std;

int main(){
	int n;
	cout<<"Enter Number of Rows"<<endl; //number of columns also equal to rows
	cin>>n;
	for(int i=1;i<=n;i++){
		for(int j=1;j<=n;j++)
		{
			if(i%2!=0 || i==0)
			{
				if(j%2==0)
				{
					cout<<"* ";
				}
				else
				{
					cout<<"  ";
				}
			}
			else if(i%2==0)
			{
				if(j%2!=0||j==1)
				{
					cout<<"* ";
				}
				else
				{
					cout<<"  ";
				}
			}
			
		}
		cout<<endl;
	}
	

}
